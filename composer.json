  "keywords": ["runn", "runn.me", "framework", "db", "dbal", "database", "connection", "pdo"],
  "type": "library",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Albert Stepantsev"
    },
    {
      "name": "Dmitriy Makarov",
      "email": "ru.damakarov@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.2",
    "runn/core": "*",
    "runn/validation": "*",
    "ext-pdo": "*"
